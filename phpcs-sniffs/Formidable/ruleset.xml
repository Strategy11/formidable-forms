<?xml version="1.0"?>
<ruleset name="Formidable">
	<description>Custom sniffs for Formidable Forms</description>

	<!-- Whitespace -->
	<rule ref="Formidable.WhiteSpace.BlankLineAfterClosingBrace" />
	<rule ref="Formidable.WhiteSpace.BlankLineBeforeReturnAfterBrace" />
	<rule ref="Formidable.WhiteSpace.ConsecutiveAssignmentSpacing" />
	<rule ref="Formidable.WhiteSpace.ShortFunctionBlankLine" />
	<rule ref="Formidable.WhiteSpace.NoBlankLineInShortIf" />
	<rule ref="Formidable.WhiteSpace.NoBlankLineAfterLoopOpen" />
	<rule ref="Formidable.WhiteSpace.NoBlankLineAfterIfOpen" />
	<rule ref="Formidable.WhiteSpace.NoBlankLineBeforeCloseBrace" />

	<!-- Code Analysis -->
	<rule ref="Formidable.CodeAnalysis.SimplifyIfReturn" />
	<rule ref="Formidable.CodeAnalysis.SimplifyIssetFalsyCheck" />
	<rule ref="Formidable.CodeAnalysis.SimplifyIssetTruthyCheck" />
	<rule ref="Formidable.CodeAnalysis.SimplifyIssetEmptyCheck" />
	<rule ref="Formidable.CodeAnalysis.SimplifyDualConditionToTernary" />
	<rule ref="Formidable.CodeAnalysis.RedundantEmptyOnParameter" />
	<rule ref="Formidable.CodeAnalysis.RedundantEmptyOnAssignedVariable" />
	<rule ref="Formidable.CodeAnalysis.RedundantParentheses" />
	<rule ref="Formidable.CodeAnalysis.RedundantIconEchoArg" />
	<rule ref="Formidable.CodeAnalysis.RedundantTruthyBeforeStringComparison" />
	<rule ref="Formidable.CodeAnalysis.RedundantIssetBeforeNotEmpty" />
	<rule ref="Formidable.CodeAnalysis.RedundantNotIssetBeforeEmpty" />
	<rule ref="Formidable.CodeAnalysis.RemoveRedundantWpdbPrefix" />
	<rule ref="Formidable.CodeAnalysis.PreferStrictComparison" />
	<rule ref="Formidable.CodeAnalysis.PreferStrictInArray" />
	<rule ref="Formidable.CodeAnalysis.PreferObGetClean" />
	<rule ref="Formidable.CodeAnalysis.PreferKsesEcho" />
	<rule ref="Formidable.CodeAnalysis.MoveVariableBelowEarlyReturn" />
	<rule ref="Formidable.CodeAnalysis.PreferEscHtmlE" />
	<rule ref="Formidable.CodeAnalysis.SimplifyEmptyTernary" />
	<rule ref="Formidable.CodeAnalysis.StrictComparisonForIntFunctions" />
	<rule ref="Formidable.CodeAnalysis.FlipNegativeTernary" />
	<rule ref="Formidable.CodeAnalysis.FlipIfToEarlyReturn" />
	<rule ref="Formidable.CodeAnalysis.FlipIfElseToEarlyReturn" />
	<rule ref="Formidable.CodeAnalysis.FlipForeachIfToContinue" />
	<rule ref="Formidable.CodeAnalysis.PreferArrayKeyFirstLast" />
	<rule ref="Formidable.CodeAnalysis.RedundantEmptyAfterTypeCheck" />

	<!-- PHPUnit -->
	<rule ref="Formidable.PHPUnit.PreferAssertIsArray" />
	<rule ref="Formidable.PHPUnit.PreferAssertArrayHasKey" />
	<rule ref="Formidable.PHPUnit.PreferAssertStringContains" />

	<!-- Commenting -->
	<rule ref="Formidable.Commenting.FixIncorrectReturnType" />
	<rule ref="Formidable.Commenting.ConvertReturnVariableToDescription" />
</ruleset>
