<?xml version="1.0"?>
<psalm
	errorLevel="7"
	resolveFromConfigFile="true"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://getpsalm.org/schema/config"
	xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
	<projectFiles>
		<file name="formidable.php" />
		<directory name="classes" />
		<directory name="deprecated" />
		<ignoreFiles>
			<directory name="vendor" />
			<directory name="classes/views/" />
		</ignoreFiles>
	</projectFiles>
	<stubs>
		<file name="vendor/php-stubs/wordpress-stubs/wordpress-stubs.php" />
		<file name="stubs.php" />
	</stubs>
	<issueHandlers>
		<UndefinedClass>
			<errorLevel type="suppress">
				<referencedClass name="FrmElementorWidget" />
			</errorLevel>
		</UndefinedClass>
		<InvalidGlobal>
			<errorLevel type="suppress">
				<directory name="classes" />
			</errorLevel>
		</InvalidGlobal>
		<UndefinedDocblockClass>
			<errorLevel type="suppress">
				<directory name="classes" />
			</errorLevel>
		</UndefinedDocblockClass>
		<UndefinedFunction>
			 <errorLevel type="suppress">
				<referencedFunction name="WP_Optimize" />
				<referencedFunction name="bp_core_email_from_address_filter" />
				<referencedFunction name="bp_core_email_from_name_filter" />
				<referencedFunction name="__autoload" />
			</errorLevel>
		</UndefinedFunction>
		<MissingFile>
			<errorLevel type="suppress">
				<file name="formidable.php" />
			</errorLevel>
		</MissingFile>
		<InvalidParamDefault>
			<errorLevel type="suppress">
				<directory name="deprecated" />
			</errorLevel>
		</InvalidParamDefault>
	</issueHandlers>
</psalm>
